<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Head">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Head.White" parent="Head">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Head.White.Bold" parent="Head.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionSmall">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Head.Liminary" parent="Head.White.Bold">
        <item name="android:textSize">@dimen/text_26sp</item>
    </style>

    <style name="Head.High" parent="Head.White">
        <item name="android:textSize">@dimen/text_26sp</item>
    </style>

    <style name="Head.Middle" parent="Head.White">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="Title">
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>